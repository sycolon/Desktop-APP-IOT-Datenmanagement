<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.appfx.iotmanagementapp.MainViewController"
        prefHeight="350.0" prefWidth="551.0"
        maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">

    <content>
        <AnchorPane prefHeight="352.0" prefWidth="536.0">
            <children>
                <Button fx:id="btnConnect" layoutX="403.0" layoutY="32.0" mnemonicParsing="false" text="Connect"/>
                <TextField fx:id="tfHost" layoutX="41.0" layoutY="32.0"/>
                <TextField fx:id="tfPort" layoutX="241.0" layoutY="32.0"/>

                <Label layoutX="7.0" layoutY="36.0" text="Host:">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
                <Label layoutX="204.0" layoutY="36.0" text="Port:">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>

                <Separator layoutX="1.0" layoutY="78.0" prefHeight="2.0" prefWidth="670.0"/>

                <GridPane gridLinesVisible="true" layoutX="6.0" layoutY="83.0" prefHeight="174.0" prefWidth="489.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Raum1"/>
                        <Label text="Raum2" GridPane.columnIndex="1"/>
                        <Label text="Raum3" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>

                <!-- nur EIN Button mit dieser fx:id -->
                <Button fx:id="btnAddRoom"
                        layoutX="329.0" layoutY="265.0"
                        mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="166.0"
                        text="Add Room"
                        onAction="#handleAddRoom"/>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
