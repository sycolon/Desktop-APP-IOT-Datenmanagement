<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.appfx.iotmanagementapp.EditRoomController"
      spacing="10">

    <padding>
        <Insets top="12.0" right="12.0" bottom="12.0" left="12.0"/>
    </padding>

    <children>
        <Label text="Bitte Raum zum Bearbeiten auswählen:"/>

        <ComboBox fx:id="cbRooms"
                  prefWidth="320.0"
                  promptText="Raum auswählen"/>

        <HBox spacing="8" alignment="CENTER_RIGHT">
            <children>
                <Button text="Cancel" onAction="#handleCancel"/>
                <Button fx:id="btnEdit" text="Edit" defaultButton="true" onAction="#handleEdit"/>
            </children>
        </HBox>
    </children>
</VBox>
